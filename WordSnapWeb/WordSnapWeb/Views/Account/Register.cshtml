@model WordSnapWeb.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Create a new account</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Register" method="post">
            <div class="form-group mb-3">
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <small class="form-text text-muted">Must contain at least 8 characters, including uppercase, lowercase and numbers.</small>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

            <div>
                <p>Already have an account? <a asp-action="Login">Login here</a></p>
            </div>
        </form>
    </div>
</div>
