@page
@model LoginModel
@{
    Layout = "_Layout";
}
<main class="py-5 flex-grow-1">
    <div class="container">
        <section class="row justify-content-center">
            <div class="col-md-8 col-lg-5">
                <form id="account" method="post" class="bg-white p-4 rounded shadow-sm">
                    <h2 class="mb-3">Увійдіть до свого акаунту.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Електронна пошта</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Пароль" />
                        <label asp-for="Input.Password">Пароль</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-2">Увійти</button>
                    <p class="text-center">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Створити новий акаунт</a>
                    </p>
                </form>
            </div>
        </section>
    </div>
</main>